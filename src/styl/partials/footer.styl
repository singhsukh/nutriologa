/* ---footer--- */
.bg-footer{
	color white
	background-color $orange
	padding 100px 0
	position relative

	.footer_logo {
		float left
		width auto
		position absolute
		top -265px
		bottom 0px
	}
	
	.left_widget {
		display inline-flex
		padding 100px 0px
	}
	.right_widget {
		padding 75px 0
		text-align right
	}
	.text_wg, .footer_caption, .subscribe{
		color white
	}
	.text_wg, .subscribe{
		font-size 22px
	}
	.subscribe{
		margin-right 20px
		font-family 'Colaborate-Regular'
	}
	.text_wg{
		font-family 'FuturaStd-Book'
	}
	.footer_caption{
		font-size 16px
		margin-top 30px
		font-family 'Colaborate-Medium'
	}
	.footer_icon {
		margin-left 20px
	}
	.wg_main {
		text-align center
	}
	.footer_caption::before {
		border-top 1px solid white
		display block
		content ''
		width 120px
		margin 0px auto 75px
	}
	.form-control1 {
		height 60px
		padding 12px 57px
		padding-left 30px
		font-size 18px
		border solid 0.5px white
		border-radius 6px
		min-width 331px
	}
	*::-webkit-input-placeholder {
	   color $placeholder
	   font-family 'FuturaStd-Book'
	}

	*:-moz-placeholder { /* Firefox 18- */
	   color $placeholder
	   font-family 'FuturaStd-Book'
	}

	*::-moz-placeholder {  /* Firefox 19+ */
	   color $placeholder
	   font-family 'FuturaStd-Book'
	}

	*:-ms-input-placeholder {  
	   color $placeholder
	   font-family 'FuturaStd-Book'
	}
}

/* mobile-responsive */
@media only screen and (max-width: 768px){
	.bg-footer{
		padding 0px

		.container.footer, .right_widget {
			text-align center
		}
		
		.footer_logo {
			position absolute
			top -90px

			.logo_img{
				height 150px
			}
		}

		.left_widget{
			padding-bottom 60px
		}
	}
}

@media only screen and (min-width: 769px) and (max-width: 1024px){
	.bg-footer{
		padding 0px

		.container.footer, .right_widget {
			text-align center
		}
		
		.left_widget{
			padding-bottom 60px
		}
	}
}