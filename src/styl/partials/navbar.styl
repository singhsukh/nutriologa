/* slider css */
.carousel-indicators {
	display none
}
.carousel-inner{
	/* background-image url('../img/slider/group-3@3x.png') */
	background-size cover
	
	.carousel-caption{
		text-align left
		text-shadow 0px 0px 0px !important
		right 0%
		bottom 240px
		left 10%
		width 50%

		.banner_text{
			font-size 72px
			margin 4px 0px
			color white
		}
		.sub_head{
			font-size 42px
			margin-bottom 30px
		}
		.read_more_btn{
			background-color transparent
			padding 11px 38px
			font-size 20px
			border 4px solid white
			border-radius 0px
		}
		.read_more_btn:hover{
			background-color $orange
		}
	}
}
.carousel-control{
	width 0px !important

	.glyphicon {
		position relative
		top 315px

		.glyph_l{
			width 40px
			height 40px
		}
	}

	.glyph_right{
		left -174px
	}
	.glyph_left{
		left 100px
	}
}
.carousel-control.left, .carousel-control.right {
   background-image none !important
   filter none !important
}
.nav_container {
	width auto
}

/* navbar css */
.navbar-toggle{
	display none
}
.navbar {
	background-color $orange
	border 0px none !important
	border-radius 0px
	
	.navbar-header {
		position relative
		left 615px
		bottom 70px
		
		.navbar-brand {
			padding 12px 15px
		}
	}
	.navbar-nav{
		width 100%
		text-align center
		
		li{
			padding 0 8px 16px
			float none
			display inline-block
			a {
				color white
				font-size 22px
			}
		}
	}
}

/* mobile-responsive */
@media only screen and (max-width: 768px){

/* navbar css */
	.navbar-toggle{
		display block
	}
	.navbar {
		.navbar-header {
			position unset

			.navbar-brand {
				height auto
				padding 0px 0px

				img {
					display block
					height 55px
					margin-left 20px
				}
			}

			.navbar-toggle {
				float right
				padding 9px 23px
				margin-right 22px
			}
		}

		.navbar-nav {
			margin 0px
			text-align left

			li{
				display block
				padding 0px
			}
		}
	}
}