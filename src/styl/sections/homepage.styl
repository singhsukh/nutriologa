/* all section css */
section{
	padding 100px 0px
}
h1{
	font-size 36px
}
h1, h2, h4, p{
	color $darkGrey
}
.pack_title, .sub_head, .sub_heading{
	color white
}
/* section 1 css */
.testimonials{
	padding 50px 0px
}
.service-box{
	
	.sr-icons {
		height 58px
	}
	
	.service_text {
		margin-top 24px
		font-size 22px
		color $lightGrey
		line-height 24px
		font-family 'FuturaStd-Medium'
	}
}

/* section 2 css */
.bg-primary{
	background-color $bgcolor
}
.tm_title{
	margin-bottom 110px
	font-family 'FuturaStd-Medium'
}
.thumbnail{
	padding 32px 32px 0

	.user_img {
		position relative
		top -90px
		bottom 0px
	}

	.thumb-img {
		width 176px
		height 176px
		margin 0px auto
	}

	.caption{
		padding 0px 9px
		position relative
		top -67px

		.sub_caption {
			font-size 18px
			font-family 'FuturaStd-Book'
			line-height 20px
			margin-top 25px
		}

		.user_name{
			font-family 'FuturaStd-Bold'
			font-size 22px
		}
	}
}

/* section 3 css */
.gallary{
	padding 100px 0px 50px

	.gallary_title{
		font-family 'FuturaStd-Bold'
	}

	.sub_heading1{
		font-family 'Colaborate-Regular'
	}
}
.gallary_area{
	margin-top 80px
}
.more_btn{
	text-align center
	margin-top 80px
	font-family 'Montserrat-Regular'
}
.btn-xl-more{
	padding 24px 78px
	background-color $orange
	border 0px none
	border-radius 0px

	.link_morebtn{
		font-size 22px
	}
}

/* section 4 css */
.blog_post{
	padding 0px 0px 100px
}
.blog_container{
	border-top 2px solid $borderColor
	margin-top 30px

	.blog_img {
		text-align center
		
		.img.img-responsive{
			display inline
		}
	}
}
.blog_title {
	margin-top 120px
	font-family 'FuturaStd-Bold'
}
.blog_caption{
	margin-top 30px
	font-family 'Colaborate-Medium'
	font-size 22px
}

/* section 5 css */
.packages{
	background-image url('/img/bg-img/apple-bg-img.png')
	background-size cover
	/* background-position 0px -180px */

	.pack_title{
		font-family 'FuturaStd-Bold'
	}

	.sub_heading{
		font-family 'Colaborate-Regular'
	}
}
.package_btn {
	margin-top 80px
	float left
	width 100%
	text-align center
	font-family 'Montserrat-Regular'
}
.btn-xl-more{
	.package_session_btn{
		font-size 22px
	}
}

@media only screen and (max-width: 768px){
	section, .gallary{
		padding 50px 0px
	}
	
	.text-center{
		margin-bottom 50px
	}
	
	h1{
		font-size 26px
	}

	h3{
		font-size 20px !important
	}

	.thumbnail{
		margin-bottom 80px
	}
	.thumbnail:las-child{
		margin-bottom 0px
	}

	.blog_title {
		margin-top 40px
	}
	.bg-footer .form-control1 {
		min-width 0px
		max-width 100%
	}
}