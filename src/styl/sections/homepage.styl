/* all section css */
section{
	padding 100px 0px
}
h1{
	font-size 36px
}
h1, h2, h4, p{
	color $darkGrey
}
.pack_title, .sub_head, .sub_heading{
	color white
}
/* section 1 css */
.testimonials{
	padding 50px 0px
}
.service-box{
	
	.sr-icons {
		height 58px
	}
	
	.service_text {
		margin-top 24px
		font-size 22px
		color $lightGrey
		line-height 24px
	}
}

/* section 2 css */
.bg-primary{
	background-color $bgcolor
}
.tm_title{
	margin-bottom 110px
}
.thumbnail{
	padding 32px 32px 0

	.user_img {
		position relative
		top -90px
		bottom 0px
	}

	.thumb-img {
		width 176px
		height 176px
		margin 0px auto
	}

	.caption{
		padding 0px 9px
		position relative
		top -67px

		.sub_caption {
			font-size 18px
		}
	}
}

/* section 3 css */
.gallary{
	padding 100px 0px 50px
}
.gallary_area{
	margin-top 80px
}
.more_btn{
	text-align center
	margin-top 80px
}
.btn-xl-more{
	padding 24px 78px
	background-color $orange
	border 0px none
	border-radius 0px

	.link_morebtn{
		font-size 22px
	}
}

/* section 4 css */
.blog_post{
	padding 0px 0px 100px
}
.blog_container{
	border-top 2px solid $borderColor
	margin-top 30px

	.blog_img {
		text-align center
		
		.img.img-responsive{
			display inline
		}
	}
}
.blog_title {
	margin-top 120px
}
.blog_caption{
	margin-top 30px
}

/* section 5 css */
.packages{
	background-image url('/img/bg-img/apple-bg-img.png')
	background-size cover
	/* background-position 0px -180px */
}
.package_btn {
	margin-top 80px
	float left
	width 100%
	text-align center
}
.btn-xl-more{
	.package_session_btn{
		font-size 22px
	}
}